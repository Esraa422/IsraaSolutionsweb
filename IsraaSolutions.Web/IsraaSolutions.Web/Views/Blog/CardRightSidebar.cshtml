
@(Html.IsraaApp().Page()
        .Title("Blog | Card Right Sidebar")
        .Footer()
        .Header(header => { 
            header.ShowTopbar(true);
            header.Nav(DemoMenu.GetDemoMenu()); 
        }) 
)



@Html.IsraaApp().Section().Overlay(5).Src("../Content/img/hero/h13.jpg").SectionType(SectionType.ParallaxImage).ContentTemplate(@<text>

    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-12 text-white">
                <div class="clearfix">
                    @Html.IsraaApp().Breadcrumb().Transparent()
                    <h1 class="fw-600 fs-45">Grid Right Sidebar</h1>
                    <p class="lead mb-5">
                        We are going global <strong class="m-link-light">#LoveToNettex</strong> .
                        To make it happen we are looking for fresh,<br /> ambitious talent to join our cause.
                    </p>
                    <a href="#read-all" class="btn btn-light btn-sm transition-hover pr-4 pl-4">Read all news</a>
                </div>
            </div>
        </div>
    </div>

</text>)



@Html.IsraaApp().Section().BgColor(BootstrapColor.Light).ContentTemplate(@<text>

    <div class="container">
        <div class="row">
            <div class="col-lg-8">

                @Html.IsraaApp().BlogPosts(BlogPostViewName.Card).Pageable(6)

            </div>

            <div class="col-lg-4">
                <div class="mb-9">
                    @Html.IsraaApp().Widget("SidebarSubscribeForm", new SubscriberModel())
                </div>

                <div class="mb-9">
                    @Html.IsraaApp().Widget("SidebarFollowLinks")
                </div>

                <div class="mb-9">
                    @Html.IsraaApp().Widget("SidebarCategories")
                </div>

                <div class="mb-9">
                    @Html.IsraaApp().Widget("SidebarPopularPosts")
                </div>

                <div class="mb-9">
                    @Html.IsraaApp().Widget("SidebarLatestPosts")
                </div>

                <div class="mb-9">
                    @Html.IsraaApp().Widget("SidebarLatestComments")
                </div>
            </div>

        </div>
    </div>

</text>)
 
