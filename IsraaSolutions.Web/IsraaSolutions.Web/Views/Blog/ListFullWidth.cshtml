
@(Html.IsraaApp().Page()
    .Title("Blog | List Full Width")
    .Footer()
    .Header(settings => {
        settings.Nav(DemoMenu.GetDemoMenu());
        settings.ShowTopbar(true); 
    }))


@Html.IsraaApp().Section().ContentTemplate(@<text>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-9">

                @Html.IsraaApp().BlogPosts(BlogPostViewName.ListBottomText).Pageable(3)

            </div>
        </div>
    </div>

</text>).Size(SectionSize.Small)


