 

@{ ViewBag.Title = Model; }

@Html.IsraaApp().Header(settings => {
    settings.Nav = DemoMenu.GetDemoMenu();
    settings.ShowTopbar = false;
    settings.StickyType = HeaderStickyType.Shrink;
    settings.BorderBottom = HeaderBorderBottom.Light;
})

 
@Html.IsraaApp().Section().Size(SectionSize.Small).ContentTemplate(@<text>

    <div class="container">
        <div class="row">
            <div class="col-lg-8">

                @Html.IsraaApp().UserShortInfo().User(Convert.ToString(ViewBag.UserName)).AppendCssClass("mb-6")
                 

                @(Html.IsraaApp().BlogPosts(BlogPostViewName.ListBottomText)
                    .Pageable(5)
                    .FilterByUserNames(new string[] { Convert.ToString(ViewBag.UserName) }))

            </div>

            <div class="col-lg-4">
                <div class="mb-9">
                    @Html.IsraaApp().Widget("SidebarSubscribeForm", new SubscriberModel())
                </div>

                <div class="mb-9">
                    @Html.IsraaApp().Widget("SidebarFollowLinks")
                </div>

                <div class="mb-9">
                    @Html.IsraaApp().Widget("SidebarCategories")
                </div>

                <div class="mb-9">
                    @Html.IsraaApp().Widget("SidebarPopularPosts")
                </div>

                <div class="mb-9">
                    @Html.IsraaApp().Widget("SidebarLatestPosts")
                </div>

                <div class="mb-9">
                    @Html.IsraaApp().Widget("SidebarLatestComments")
                </div>
            </div>

        </div>
    </div>

</text>)


@Html.IsraaApp().Footer()