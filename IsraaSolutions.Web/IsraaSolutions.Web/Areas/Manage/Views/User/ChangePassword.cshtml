@model ChangePasswordViewModel

 
@(Html.IsraaApp().Page()
    .Title("Change Password")
    .Footer()
    .Header(settings => {
        settings.Nav(DemoMenu.GetDemoMenu());
        settings.ShowTopbar(true); 
    }))

<div class="pageContainer">
    @Html.Partial("_Breadcrumb", "Change Password")

    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fa fa-user mr-3 fs-14"></i>
                            @Html.LabelFor(x => x.UserName, new { @class = "m-0 fs-14 text-light" })
                        </span>
                    </div>
                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fas fa-pencil-alt mr-3 fs-14"></i>
                            @Html.LabelFor(x => x.OldPassword, new { @class = "m-0 fs-14" })
                        </span>
                    </div>
                    @Html.PasswordFor(x => x.OldPassword, new { @class = "form-control" })
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fas fa-pencil-alt mr-3 fs-14"></i>
                            @Html.LabelFor(x => x.NewPassword, new { @class = "m-0 fs-14" })
                        </span>
                    </div>
                    @Html.PasswordFor(x => x.NewPassword, new { @class = "form-control" })
                </div>

                <div class="input-group mb-5">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fas fa-pencil-alt mr-3 fs-14"></i>
                            @Html.LabelFor(x => x.ConfirmPassword, new { @class = "m-0 fs-14" })
                        </span>
                    </div>
                    @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-sm transition-hover">
                        <i class="fa fa-save mr-1 fs-14"></i> Change password
                    </button>

                    <div class="d-inline-block">
                        <span class="mx-2 text-light font-weight-light fs-15">or</span>
                        <i class="fas fa-long-arrow-alt-left fs-13 text-primary o-8"></i>
                        <a href="@Url.Action("Index", "User")" class="m-link fs-15"> Back to profile</a>
                    </div>
                </div>
            }
        </div>
    </div>    
</div>


